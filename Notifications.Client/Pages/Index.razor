@page "/"
@using Microsoft.AspNetCore.SignalR.Client
@implements IAsyncDisposable

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<p>
    Welcome to your new app.
</p>

<h2>
    Messages from the server:
</h2>

<ul>
    @foreach(var message in _messages)
    {
        <li>@message</li>
    }
</ul>

@code
{
    private HubConnection? _hubConnection;
    private readonly List<string> _messages = new();

    protected override async Task OnInitializedAsync()
    {
        _hubConnection = new HubConnectionBuilder()
            .WithUrl("https://localhost:7041/notifications", options =>
            {
                options.AccessTokenProvider = () => Task.FromResult<string?>("eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..RBNIQRPCf1mB8jjpMgLapNvNntBf_MJ4b8S49MAcroA");
            })
            .Build();

        _hubConnection.On<string>("RecieveNotification", message =>
        {
            _messages.Add(message);
            InvokeAsync(StateHasChanged);
        });

        await _hubConnection.StartAsync();
    }

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection is not null)
            await _hubConnection.DisposeAsync();
    }
}
